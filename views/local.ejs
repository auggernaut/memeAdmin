<!DOCTYPE html>
<html>
<head>
    <title>Meme Manager</title>
    <link rel='stylesheet' href='/css/style.css'/>
    <script src="/js/masonry.pkgd.min.js"></script>
    <script src="/js/jquery-1.11.0.min.js"></script>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <script src="/js/imagesloaded.pkgd.min.js"></script>
</head>
<body>

<ul class="nav nav-tabs">
    <li><a href="/">Home</a></li>
    <li class="active"><a href="/list">Local</a></li>
    <li><a href="/parse">Parse</a></li>
    <li><a href="/imgur">Imgur</a></li>
</ul>

<div class="container">
    <h1>Review Memes</h1>

    <p>Total: <%= total %></p>
    <div class="checkbox">
        <label>
            <input type="checkbox" id="hideFlagged"> Hide flagged
        </label>
    </div>
    <ul class="pagination pagination-lg">
        <% for(var i = 0; i < pages ; i++) { %>
        <li id="pt<%= i %>"><a href="/list?p=<%= i %>"><%= i %></a></li>
        <% } %>
    </ul>
</div>

<div id="memes" class="js-masonry"
     data-masonry-options='{ "columnWidth": 200, "itemSelector": ".item" }'>
    <% memes.forEach(function(el, index) { %>
    <% if(el.flagged) { %>
    <div class="item"><img src="<%= el.link %>" class="meme flag" id="<%= el.imgurId %>"/></div>
    <% } else { %>
    <div class="item"><img src="<%= el.link %>" class="meme" id="<%= el.imgurId %>"/></div>
    <% } %>
    <% }) %>
</div>

<div class="container">
    <ul class="pagination pagination-lg">
        <% for(var i = 0; i < pages ; i++) { %>
        <li id="pb<%= i %>"><a href="/list?p=<%= i %>"><%= i %></a></li>
        <% } %>
    </ul>
</div>

<script src="/js/main.js"></script>
</body>
</html>